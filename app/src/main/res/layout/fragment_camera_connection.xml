<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.detection.fragment.CameraConnectionFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.capstone.komunitas.ui.detection.AutoFixTexture
            android:id="@+id/auto_fix_texture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            />

        <com.capstone.komunitas.ui.detection.RecognitionScoreView
            android:id="@+id/resultRecognition"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"/>

        <com.capstone.komunitas.ui.detection.OverlayView
            android:id="@+id/overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

</FrameLayout>