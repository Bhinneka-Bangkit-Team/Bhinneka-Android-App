<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewmodel"
            type="com.capstone.komunitas.ui.chat.ChatViewModel" />

        <variable
            name="message"
            type="com.capstone.komunitas.data.db.entities.Chat" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <TextView
            android:paddingVertical="15dp"
            android:paddingHorizontal="20dp"
            android:id="@+id/messageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="12dp"
            android:lineHeight="25dp"
            android:background="@drawable/rounded_rectangle_secondary"
            android:maxWidth="300dp"
            android:paddingLeft="12dp"
            android:paddingTop="6dp"
            android:paddingRight="12dp"
            android:paddingBottom="6dp"
            android:text="@{message.text}"
            android:textColor="@color/black"
            android:textSize="18sp"
            tools:text="This is a messageThis is a messageThis is a messageThis is a messageThis is a messageThis is a messageThis is a message" />
        <ImageButton
            android:backgroundTint="?attr/colorOnPrimary"
            android:src="@drawable/ic_baseline_volume_up_24"
            android:id="@+id/mic_chat"
            android:layout_width="wrap_content"
            android:onClick="@{() -> viewmodel.downloadAudio(message.text)}"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</layout>